@model IEnumerable<CharityDB.net5.Models.items>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.clothes)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.food)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.clothes)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.food)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.itemsId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.itemsId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.itemsId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
